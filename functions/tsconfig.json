{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "watch": false,
    "types": ["mocha", "jest"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
